<Window x:Class="GUIProject.AboutUs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Us" Height="400" Width="600">
    <Grid>
        <!-- Background Image -->
        <Image Source="C:\Users\Tharuka Dissanayake\Desktop\GUI Project 1\Brown Illustarted World Chocolate Day Facebook Post (1).png"
               Stretch="UniformToFill" 
               Grid.RowSpan="2" 
               Grid.ColumnSpan="2"
               Panel.ZIndex="-1"/>

        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="About Us" FontSize="28" FontWeight="Bold" Foreground="Wheat" HorizontalAlignment="Center"/>
                <TextBlock Text="Welcome to Sweet Delights! We are a passionate team dedicated to creating the finest chocolates, cakes, and desserts. Our mission is to bring joy to your life with every bite."
                           FontSize="16" Foreground="Wheat" TextWrapping="Wrap" Margin="0,10,0,0"/>

                <TextBlock Text="Our Story" FontSize="22" FontWeight="Bold" Foreground="Wheat" Margin="0,20,0,0"/>
                <TextBlock Text="Founded in 2023, Sweet Delights started as a small family bakery. Today, we are proud to serve our community with handcrafted treats made from the freshest ingredients."
                           FontSize="16" Foreground="Wheat" TextWrapping="Wrap" Margin="0,10,0,0"/>

                <TextBlock Text="Our Promise" FontSize="22" FontWeight="Bold" Foreground="Wheat" Margin="0,20,0,0"/>
                <TextBlock Text="- Quality: Only the best ingredients.&#x0a;- Creativity: Unique and delicious flavors.&#x0a;- Care: Every product made with love."
                           FontSize="16" Foreground="Wheat" TextWrapping="Wrap" Margin="0,10,0,0"/>

                <TextBlock Text="Visit Us" FontSize="22" FontWeight="Bold" Foreground="Wheat" Margin="0,20,0,0"/>
                <TextBlock Text="Find us at:&#x0a;Address: 123 Sweet Street, Dessert City, DC 12345&#x0a;Phone: +94 456-978-350 Email: info@sweetdelights.com"
                           FontSize="16" Foreground="Wheat" TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
