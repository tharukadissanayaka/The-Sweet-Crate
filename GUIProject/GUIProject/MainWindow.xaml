<Window x:Class="GUIProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    <Canvas Background="#4F311C">
        <Image Source="C:\Users\Tharuka Dissanayake\Desktop\GUI Project 1\Dark Brown Chocolate Tutorial YouTube Thumbnail.png"
               Stretch="UniformToFill"  
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Canvas.Left="0" 
               Canvas.Top="0"
               Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}"
               Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}"></Image>

        <Button Background="#4F311C"
                Foreground="White"
                Click="Button_Click"
                Padding="20 5 20 5"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Top"
                FontSize="15"
                BorderBrush="Gray"
               
                RenderTransformOrigin="0.969,0.409"
                Width="150"
                Height="40"
                Canvas.Top="30"
                Canvas.Right="20"
                > Order Now >></Button>

    </Canvas>
</Window>
